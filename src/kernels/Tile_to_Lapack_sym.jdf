/**
 * @brief Debug function to print tile contents (commented out in production)
 * 
 * This function is used for debugging purposes to print the contents of a tile.
 * It iterates through all elements in the tile and prints them in a formatted manner.
 * This function is typically commented out in production builds for performance reasons.
 * 
 * @param [in] m: Tile row index
 * @param [in] n: Tile column index  
 * @param [in] A: Pointer to tile data
 * @param [in] nb: Block size (number of elements per dimension)
 * @param [in] lda: Leading dimension of the tile
 */
void printA(int m, int n, double *A, int nb, int lda)
{
    printf("\nPrint tile(%d, %d)", m, n);
    for (int i=0; i<nb;i++){
        for(int j=0; j<nb;j++)
            printf("%f, ", A[i+lda*j]);
    }
}
%}

/**
 * @file Tile_to_Lapack_sym.jdf
 * @brief PaRSEC kernel for converting symmetric tiled matrix to LAPACK format (double precision)
 * 
 * This kernel converts a distributed symmetric tiled matrix to a contiguous LAPACK-style
 * matrix layout for double precision data. It handles the conversion from the tile-based
 * storage format used by PaRSEC to the column-major format expected by LAPACK routines.
 * 
 * This version processes only upper triangular tiles (where n <= m), taking advantage
 * of the symmetry property to avoid duplicate work. The lower triangular part can be
 * reconstructed from the upper triangular part due to symmetry.
 */

// Input parameters for symmetric tile-to-LAPACK conversion
descA             [ type = "parsec_tiled_matrix_t *" ]  // Source tiled matrix descriptor
Zobs              [ type = "double *" ]                 // Destination LAPACK matrix buffer
P                 [ type = "int" ]                      // Process grid row dimension
Q                 [ type = "int" ]                      // Process grid column dimension

Read(m, n)

// Iterate over upper triangular tiles (symmetric matrix)
// Only process tiles where n <= m to avoid duplicate work for symmetric matrices
m = 0 .. descA->lmt-1
n = 0 .. m

: descA(m, n)

READ A <- descA(m, n)

BODY
{
       int tempmm, tempnn, ldam;
       
       // Calculate actual tile dimensions, handling edge tiles that may be smaller
       // For the last tile in each dimension, use remaining elements
       tempmm = ((m)==((descA->mt)-1)) ? ((descA->m)-(m*(descA->mb))) : (descA->mb);
       tempnn = ((n)==((descA->nt)-1)) ? ((descA->n)-(n*(descA->nb))) : (descA->nb);
       
       // Get leading dimension of source tile
       ldam = BLKLDD( descA, m );

       // Calculate destination address in LAPACK matrix using column-major indexing
       void *Z0 = (void *)Zobs + parsec_getaddr_cm(descA, m, n, P, Q);
       
       // Copy tile data from tile layout to LAPACK column-major layout
       // Uses optimized BLAS routine for double precision data
       CORE_dlacpy(PlasmaUpperLower, tempmm, tempnn,
                  A, ldam, (double*)Z0, descA->llm);
       
       // Debug print function (commented out in production for performance)
       //printA(m, n, Z0, tempmm, ldam);
               
}
END


extern "C" %{


/**
 * @brief Create new taskpool for symmetric tile-to-LAPACK conversion (double precision)
 * 
 * This function creates and configures a PaRSEC taskpool for converting
 * a distributed symmetric tiled matrix to LAPACK format. The taskpool manages the
 * parallel execution of tile-to-LAPACK conversion tasks across the process grid,
 * specifically handling symmetric matrices where only upper triangular tiles are processed.
 * 
 * @param [in] dcA:    Source tiled matrix descriptor (already distributed and allocated)
 * @param [in] Zobs:   Destination LAPACK matrix buffer (pre-allocated)
 * @param [in] P:      Process grid row dimension
 * @param [in] Q:      Process grid column dimension
 * @return Pointer to the created parsec taskpool object for scheduling
 */
parsec_taskpool_t*
hicma_parsec_Tile_to_Lapack_sym_New(parsec_tiled_matrix_t *dcA, double *Zobs, int P, int Q)
{
    parsec_taskpool_t* Tile_to_Lapack_sym_taskpool;
    parsec_Tile_to_Lapack_sym_taskpool_t* taskpool = NULL;

    // Create new taskpool instance with input parameters
    taskpool = parsec_Tile_to_Lapack_sym_new(dcA, Zobs, P, Q);
    Tile_to_Lapack_sym_taskpool = (parsec_taskpool_t*)taskpool;

    // Configure arena for double precision data with proper alignment
    // This ensures optimal memory access patterns for double precision operations
    parsec_add2arena(&taskpool->arenas_datatypes[PARSEC_Tile_to_Lapack_sym_DEFAULT_ADT_IDX],
                            parsec_datatype_double_t, PARSEC_MATRIX_FULL,
                            1, dcA->mb, dcA->nb, dcA->mb,
                            PARSEC_ARENA_ALIGNMENT_SSE, -1 );

    return Tile_to_Lapack_sym_taskpool;
}

/**
 * @brief Destroy taskpool and clean up resources
 * 
 * This function properly cleans up all resources associated with the
 * symmetric tile-to-LAPACK conversion taskpool, including arena memory and
 * taskpool structures.
 * 
 * @param [inout] taskpool: Pointer to the parsec taskpool object to destroy
 */
void hicma_parsec_Tile_to_Lapack_sym_Destruct(parsec_taskpool_t *taskpool)
{
    parsec_Tile_to_Lapack_sym_taskpool_t *Tile_to_Lapack_sym_taskpool = (parsec_Tile_to_Lapack_sym_taskpool_t *)taskpool;
    
    // Clean up arena resources to prevent memory leaks
    parsec_del2arena(&Tile_to_Lapack_sym_taskpool->arenas_datatypes[PARSEC_Tile_to_Lapack_sym_DEFAULT_ADT_IDX]);
    
    // Free taskpool memory and associated structures
    parsec_taskpool_free(taskpool);
}

/**
 * @brief Execute symmetric tile-to-LAPACK conversion (double precision)
 *
 * This is the main interface function for converting a distributed symmetric tiled matrix
 * to LAPACK format. It creates a taskpool, schedules the conversion tasks, executes them
 * in parallel, and cleans up resources. Only upper triangular tiles are processed to
 * take advantage of the symmetry property.
 *
 * @param [in] parsec: PaRSEC context for task scheduling and execution
 * @param [in] dcA: Source tiled matrix descriptor (already distributed and allocated)
 * @param [in] Zobs: Destination LAPACK matrix buffer (pre-allocated)
 * @param [in] P: Process grid row dimension
 * @param [in] Q: Process grid column dimension
 * @return 0 on success, error code on failure
 */
int hicma_parsec_Tile_to_Lapack_sym(parsec_context_t *parsec,
                parsec_tiled_matrix_t *dcA, double *Zobs, int P, int Q)
{
    parsec_taskpool_t *parsec_Tile_to_Lapack_sym = NULL;
    
    // Create taskpool for conversion with input parameters
    parsec_Tile_to_Lapack_sym = hicma_parsec_Tile_to_Lapack_sym_New(dcA, Zobs, P, Q);

    if( parsec_Tile_to_Lapack_sym != NULL ){
        // Schedule conversion tasks to the PaRSEC context
        parsec_context_add_taskpool(parsec, parsec_Tile_to_Lapack_sym);
        
        // Start task execution and wait for completion
        parsec_context_start(parsec);
        parsec_context_wait(parsec);
        
        // Clean up taskpool resources
        hicma_parsec_Tile_to_Lapack_sym_Destruct(parsec_Tile_to_Lapack_sym);
    }

    return 0;
}

%}
