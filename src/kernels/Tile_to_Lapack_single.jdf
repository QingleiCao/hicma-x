/**
 * @file Tile_to_Lapack_single.jdf
 * @brief PaRSEC kernel for converting tiled matrix to LAPACK format (single precision)
 * 
 * This kernel converts a distributed tiled matrix to a contiguous LAPACK-style
 * matrix layout for single precision (float) data. It handles the conversion from
 * the tile-based storage format used by PaRSEC to the column-major format expected
 * by LAPACK routines.
 * 
 * The conversion process involves:
 * 1. Iterating over all tiles in the matrix
 * 2. Calculating proper tile dimensions (handling edge cases)
 * 3. Computing destination addresses in the LAPACK matrix
 * 4. Copying tile data using optimized BLAS routines for single precision
 */

// Input parameters for single precision tile-to-LAPACK conversion
descA             [ type = "parsec_tiled_matrix_t *" ]  // Source tiled matrix descriptor
Zobs              [ type = "float *" ]                 // Destination LAPACK matrix buffer
P                 [ type = "int" ]                      // Process grid row dimension
Q                 [ type = "int" ]                      // Process grid column dimension

Read(m, n)

// Iterate over all tiles in the matrix
// m: tile row index, n: tile column index
m = 0 .. descA->lmt-1
n = 0 .. descA->lnt-1

: descA(m, n)

READ A <- descA(m, n)

BODY
{
       int tempmm, tempnn, ldam;
       
       // Calculate actual tile dimensions, handling edge tiles that may be smaller
       // For the last tile in each dimension, use remaining elements
       tempmm = ((m)==((descA->mt)-1)) ? ((descA->m)-(m*(descA->mb))) : (descA->mb);
       tempnn = ((n)==((descA->nt)-1)) ? ((descA->n)-(n*(descA->nb))) : (descA->nb);
       
       // Get leading dimension of source tile
       ldam = BLKLDD( descA, m );

       // Calculate destination address in LAPACK matrix using column-major indexing
       void *Z0 = (void *)Zobs + parsec_getaddr_cm(descA, m, n, P, Q);
       
       // Copy tile data from tile layout to LAPACK column-major layout
       // Uses optimized BLAS routine for single precision (float) data
       CORE_slacpy(PlasmaUpperLower, tempmm, tempnn,
                  A, ldam, (float*)Z0, descA->llm);
               
}
END


extern "C" %{


/**
 * @brief Create new taskpool for single precision tile-to-LAPACK conversion
 * 
 * This function creates and configures a PaRSEC taskpool for converting
 * a distributed tiled matrix to LAPACK format for single precision (float) data.
 * The taskpool manages the parallel execution of tile-to-LAPACK conversion tasks
 * across the process grid, specifically handling float data types.
 * 
 * @param [in] dcA:    Source tiled matrix descriptor (already distributed and allocated)
 * @param [in] Zobs:   Destination LAPACK matrix buffer (pre-allocated)
 * @param [in] P:      Process grid row dimension
 * @param [in] Q:      Process grid column dimension
 * @return Pointer to the created parsec taskpool object for scheduling
 */
parsec_taskpool_t*
hicma_parsec_Tile_to_Lapack_single_New(parsec_tiled_matrix_t *dcA, float *Zobs, int P, int Q)
{
    parsec_taskpool_t* Tile_to_Lapack_single_taskpool;
    parsec_Tile_to_Lapack_single_taskpool_t* taskpool = NULL;

    // Create new taskpool instance with input parameters
    taskpool = parsec_Tile_to_Lapack_single_new(dcA, Zobs, P, Q);
    Tile_to_Lapack_single_taskpool = (parsec_taskpool_t*)taskpool;

    // Configure arena for single precision data with proper alignment
    // This ensures optimal memory access patterns for float operations
    parsec_add2arena(&taskpool->arenas_datatypes[PARSEC_Tile_to_Lapack_single_DEFAULT_ADT_IDX],
                            parsec_datatype_float_t, PARSEC_MATRIX_FULL,
                            1, dcA->mb, dcA->nb, dcA->mb,
                            PARSEC_ARENA_ALIGNMENT_SSE, -1 );

    return Tile_to_Lapack_single_taskpool;
}

/**
 * @brief Destroy taskpool and clean up resources
 * 
 * This function properly cleans up all resources associated with the
 * single precision tile-to-LAPACK conversion taskpool, including arena memory and
 * taskpool structures.
 * 
 * @param [inout] taskpool: Pointer to the parsec taskpool object to destroy
 */
void hicma_parsec_Tile_to_Lapack_single_Destruct(parsec_taskpool_t *taskpool)
{
    parsec_Tile_to_Lapack_single_taskpool_t *Tile_to_Lapack_single_taskpool = (parsec_Tile_to_Lapack_single_taskpool_t *)taskpool;
    
    // Clean up arena resources to prevent memory leaks
    parsec_del2arena(&Tile_to_Lapack_single_taskpool->arenas_datatypes[PARSEC_Tile_to_Lapack_single_DEFAULT_ADT_IDX]);
    
    // Free taskpool memory and associated structures
    parsec_taskpool_free(taskpool);
}

/**
 * @brief Execute single precision tile-to-LAPACK conversion
 *
 * This is the main interface function for converting a distributed tiled matrix
 * to LAPACK format for single precision (float) data. It creates a taskpool,
 * schedules the conversion tasks, executes them in parallel, and cleans up resources.
 *
 * @param [in] parsec: PaRSEC context for task scheduling and execution
 * @param [in] dcA: Source tiled matrix descriptor (already distributed and allocated)
 * @param [in] Zobs: Destination LAPACK matrix buffer (pre-allocated)
 * @param [in] P: Process grid row dimension
 * @param [in] Q: Process grid column dimension
 * @return 0 on success, error code on failure
 */
int hicma_parsec_Tile_to_Lapack_single(parsec_context_t *parsec,
                parsec_tiled_matrix_t *dcA, float *Zobs, int P, int Q)
{
    parsec_taskpool_t *parsec_Tile_to_Lapack_single = NULL;
    
    // Create taskpool for conversion with input parameters
    parsec_Tile_to_Lapack_single = hicma_parsec_Tile_to_Lapack_single_New(dcA, Zobs, P, Q);

    if( parsec_Tile_to_Lapack_single != NULL ){
        // Schedule conversion tasks to the PaRSEC context
        parsec_context_add_taskpool(parsec, parsec_Tile_to_Lapack_single);
        
        // Start task execution and wait for completion
        parsec_context_start(parsec);
        parsec_context_wait(parsec);
        
        // Clean up taskpool resources
        hicma_parsec_Tile_to_Lapack_single_Destruct(parsec_Tile_to_Lapack_single);
    }

    return 0;
}

%}
