                C, A, B, m, n, k, 0, 0, 0 );
    }
    /* C is dense, A is low-rank, B is dense */
    else if( IS_DENSE(m, n) && !IS_DENSE(m, k) && IS_DENSE(n, k) ) 
    { 
        int Arank = ((int *)this_task->data._f_Ar.data_in->original->device_copies[0]->device_private)[0];
        /* If rank is 0, return */
