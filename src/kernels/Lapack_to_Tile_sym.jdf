/**
 * @file Lapack_to_Tile_sym.jdf
 * @brief PaRSEC kernel for converting symmetric LAPACK matrix to tiled format (double precision)
 * 
 * This kernel converts a contiguous symmetric LAPACK-style matrix to a distributed tiled matrix
 * format for double precision data. It handles the conversion from the column-major format used
 * by LAPACK routines to the tile-based storage format used by PaRSEC.
 * 
 * This version processes only upper triangular tiles (where n <= m), taking advantage
 * of the symmetry property to avoid duplicate work. The lower triangular part can be
 * reconstructed from the upper triangular part due to symmetry.
 */

// Task parameters: tiled matrix descriptor, source data, and grid dimensions
descA             [ type = "parsec_tiled_matrix_t *" ]  // Destination tiled matrix descriptor
Zobs              [ type = "double *" ]                 // Source LAPACK matrix buffer
P                 [ type = "int" ]                      // Process grid row dimension
Q                 [ type = "int" ]                      // Process grid column dimension

// Task iteration over symmetric matrix tiles (upper triangular)
Read(m, n)

// Iterate over upper triangular tiles (symmetric matrix)
// Only process tiles where n <= m to avoid duplicate work for symmetric matrices
m = 0 .. descA->lmt-1
n = 0 .. m

: descA(m, n)

// Read-write access to tile data
RW A <- descA(m, n) 
     -> descA(m, n)

BODY
{
    int tempmm, tempnn, ldam;
    
    // Calculate actual tile dimensions, handling edge tiles that may be smaller
    // For the last tile in each dimension, use remaining elements
    tempmm = ((m)==((descA->mt)-1)) ? ((descA->m)-(m*(descA->mb))) : (descA->mb);
    tempnn = ((n)==((descA->nt)-1)) ? ((descA->n)-(n*(descA->nb))) : (descA->nb);
    
    // Get leading dimension of destination tile
    ldam = BLKLDD( descA, m );

    // Calculate source address in LAPACK matrix using column-major indexing
    void *Z0 = (void *)Zobs + parsec_getaddr_cm(descA, m, n, P, Q);
    
    // Copy data from LAPACK column-major layout to tile layout
    // Uses optimized BLAS routine for double precision data
    CORE_dlacpy(PlasmaUpperLower, tempmm, tempnn,
               (double*)Z0, descA->llm,
                         A , ldam);
}
END


extern "C" %{


/**
 * @brief Create new taskpool for symmetric LAPACK to tile conversion (double precision)
 * 
 * This function creates and configures a PaRSEC taskpool for converting
 * a symmetric LAPACK matrix to distributed tiled format. The taskpool manages the
 * parallel execution of LAPACK-to-tile conversion tasks across the process grid,
 * specifically handling symmetric matrices where only upper triangular tiles are processed.
 * 
 * @param [in] dcA:    Destination tiled matrix descriptor (already distributed and allocated)
 * @param [in] Zobs:   Source LAPACK matrix buffer (pre-allocated)
 * @param [in] P:      Process grid row dimension
 * @param [in] Q:      Process grid column dimension
 * @return Pointer to the created parsec taskpool object for scheduling
 */
parsec_taskpool_t*
hicma_parsec_Lapack_to_Tile_sym_New(parsec_tiled_matrix_t *dcA, double *Zobs, int P, int Q) 
{
    parsec_taskpool_t* Lapack_to_Tile_sym_taskpool;
    parsec_Lapack_to_Tile_sym_taskpool_t* taskpool = NULL;

    // Create new taskpool instance with input parameters
    taskpool = parsec_Lapack_to_Tile_sym_new(dcA, Zobs, P, Q); 
    Lapack_to_Tile_sym_taskpool = (parsec_taskpool_t*)taskpool;

    // Configure arena for double precision data with proper alignment
    // This ensures optimal memory access patterns for double precision operations
    parsec_add2arena(&taskpool->arenas_datatypes[PARSEC_Lapack_to_Tile_sym_DEFAULT_ADT_IDX],
                            parsec_datatype_double_t, PARSEC_MATRIX_FULL,
                            1, dcA->mb, dcA->nb, dcA->mb,
                            PARSEC_ARENA_ALIGNMENT_SSE, -1 );

    return Lapack_to_Tile_sym_taskpool;
}

/**
 * @brief Destroy taskpool and clean up resources
 * 
 * This function properly cleans up all resources associated with the
 * symmetric LAPACK-to-tile conversion taskpool, including arena memory and
 * taskpool structures.
 * 
 * @param [inout] taskpool: Pointer to the parsec taskpool object to destroy
 */
void hicma_parsec_Lapack_to_Tile_sym_Destruct(parsec_taskpool_t *taskpool)
{
    parsec_Lapack_to_Tile_sym_taskpool_t *Lapack_to_Tile_sym_taskpool = (parsec_Lapack_to_Tile_sym_taskpool_t *)taskpool;
    
    // Clean up arena resources to prevent memory leaks
    parsec_del2arena(&Lapack_to_Tile_sym_taskpool->arenas_datatypes[PARSEC_Lapack_to_Tile_sym_DEFAULT_ADT_IDX]);
    
    // Free taskpool memory and associated structures
    parsec_taskpool_free(taskpool);
}

/**
 * @brief Execute symmetric LAPACK to tile conversion (double precision)
 *
 * This is the main interface function for converting a symmetric LAPACK matrix to distributed
 * tiled format. It creates a taskpool, schedules the conversion tasks, executes them in parallel,
 * and cleans up resources. Only upper triangular tiles are processed to take advantage of
 * the symmetry property.
 *
 * @param [in] parsec: PaRSEC context for task scheduling and execution
 * @param [inout] dcA: Destination tiled matrix descriptor (already distributed and allocated)
 * @param [in] Zobs: Source LAPACK matrix buffer (pre-allocated)
 * @param [in] P: Process grid row dimension
 * @param [in] Q: Process grid column dimension
 * @return 0 on success, error code on failure
 */
int hicma_parsec_Lapack_to_Tile_sym(parsec_context_t *parsec,
		parsec_tiled_matrix_t *dcA, double *Zobs, int P, int Q) 
{
    parsec_taskpool_t *parsec_Lapack_to_Tile_sym = NULL;
    
    // Create taskpool for conversion with input parameters
    parsec_Lapack_to_Tile_sym = hicma_parsec_Lapack_to_Tile_sym_New(dcA, Zobs, P, Q); 

    if( parsec_Lapack_to_Tile_sym != NULL ){
        // Schedule conversion tasks to the PaRSEC context
        parsec_context_add_taskpool(parsec, parsec_Lapack_to_Tile_sym);
        
        // Start task execution and wait for completion
        parsec_context_start(parsec);
        parsec_context_wait(parsec);
        
        // Clean up taskpool resources
        hicma_parsec_Lapack_to_Tile_sym_Destruct(parsec_Lapack_to_Tile_sym);
    }

    return 0;
}

%}

